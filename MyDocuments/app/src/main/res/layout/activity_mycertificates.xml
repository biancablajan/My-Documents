<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mycertificates_background"
    tools:context=".MyCertificatesActivity">

    <ImageView
        android:id="@+id/iwBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="596dp"
        android:layout_marginEnd="321dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="321dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="37dp"
        android:src="@mipmap/back_arrow"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDocumentsFromMyCar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="165dp"
        android:text="Documents From My Car"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMyDiplomas"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="42dp"
        android:text="My Diplomas"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDocumentsFromMyCar" />

    <Button
        android:id="@+id/buttonMyWarranties"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="42dp"
        android:text="My Warranties"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyDiplomas" />

    <Button
        android:id="@+id/buttonMyContracts"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="42dp"
        android:text="My Contracts"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyWarranties" />

    <Button
        android:id="@+id/buttonOtherCertificates"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="42dp"
        android:text="Other Certificates"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyContracts" />

    <ImageView
        android:id="@+id/carLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="78dp"
        android:src="@mipmap/carlogo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iwBack" />

    <ImageView
        android:id="@+id/diplomasLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="42dp"
        android:src="@mipmap/diplomaslogo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carLogo" />

    <ImageView
        android:id="@+id/warrantiesLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="42dp"
        android:src="@mipmap/warrantieslogo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diplomasLogo" />

    <ImageView
        android:id="@+id/contractsLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="42dp"
        android:src="@mipmap/contractslogo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warrantiesLogo" />

    <ImageView
        android:id="@+id/othercertificatesLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="42dp"
        android:src="@mipmap/othercertificateslogo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contractsLogo" />

</android.support.constraint.ConstraintLayout>